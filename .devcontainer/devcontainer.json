{
  "name": "Copilot Compass",
  "image": "mcr.microsoft.com/devcontainers/typescript-node:1-22-bookworm",

  "features": {
    "ghcr.io/devcontainers/features/github-cli:1": {}
  },

  "forwardPorts": [3001],
  "portsAttributes": {
    "3001": {
      "label": "MCP Server",
      "onAutoForward": "openBrowserOnce",
      "visibility": "public"
    }
  },

  "postCreateCommand": "npm install && npm run build",
  "postStartCommand": "nohup bash .devcontainer/setup.sh > /tmp/mcp-server.log 2>&1 &",

  "customizations": {
    "vscode": {
      "extensions": [
        "dbaeumer.vscode-eslint",
        "esbenp.prettier-vscode",
        "GitHub.copilot",
        "GitHub.copilot-chat"
      ],
      "settings": {
        "editor.formatOnSave": true,
        "editor.defaultFormatter": "esbenp.prettier-vscode",
        "typescript.preferences.importModuleSpecifier": "relative",
        "terminal.integrated.defaultProfile.linux": "bash",
        "chat.mcp.discovery.enabled": true,
        "chat.mcp.enabled": true
      }
    },
    "codespaces": {
      "openFiles": ["README.md"]
    }
  },

  "secrets": {
    "GITHUB_TOKEN": {
      "description": "GitHub Personal Access Token with manage_billing:copilot, read:enterprise, and read:org scopes",
      "documentationUrl": "https://docs.github.com/en/authentication/keeping-your-account-and-data-secure/managing-your-personal-access-tokens"
    }
  },

  "remoteEnv": {
    "GITHUB_TOKEN": "${localEnv:GITHUB_TOKEN}"
  }
}
